@model Trainees

@{
    ViewData["Title"] = "New";
}


<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="row pb-2">

                <h2 class="text-primary">Add New Coaches</h2>
                <hr />

            </div>

            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>

            </div>




            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="file" id="imgfile" class="form-control" onchange="fillimg(event);" />
            </div>


            <br />
            <hr />

            <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
            <a asp-action="Index" asp-controller="Coaches" class="btn btn-secondary" style="width:150px">
                back to Coache
            </a>

        </form>

    </div>

    <div class="col-md-4">
        <div class="container">
            <img id="ImagePrevew" width="300" height="300" />
        </div>
    </div>




</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        var fillimg = function(event){
            var imgholder = document.getElementById("ImagePrevew");
            imgholder.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>

}
